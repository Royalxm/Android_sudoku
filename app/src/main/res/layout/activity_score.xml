<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sudoku.p8.ScoreActivity" android:background="@drawable/scores">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/easy_mode"
            android:textColor="@color/modeTextColor"
            android:shadowColor="@color/statusBarColor"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textViewEasy" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/cadre"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/best_score"
                android:gravity="center_vertical"
                android:id="@+id/textViewEasyBestscore" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/current_score"
                android:gravity="center_vertical"
                android:id="@+id/textViewEasyScore" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/medium_mode"
            android:textColor="@color/modeTextColor"
            android:shadowColor="@color/statusBarColor"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textViewMedium" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/cadre"
            android:layout_gravity="center_horizontal">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/best_score"
            android:gravity="center_vertical"
            android:id="@+id/textViewMediumBestscore" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/current_score"
                android:gravity="center_vertical"
                android:id="@+id/textViewMediumScore" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/hard_mode"
            android:textColor="@color/modeTextColor"
            android:shadowColor="@color/statusBarColor"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textViewHard" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/cadre"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/best_score"
                android:gravity="center_vertical"
                android:id="@+id/textViewHardBestscore" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/current_score"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:id="@+id/textViewHardScore" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
